{
    "name": "bear",
    "version": "1.0",
    "manifest_version": 2,
    "description": "A first attempt at creating a Chrome extension",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {

        "default_title": "Bear"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"]
}